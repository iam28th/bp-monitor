#include "ADC_functions.h"


void ADC_init ()
{
	ADMUX = 0;
	ADMUX |= (1 << REFS0); // ¿¿¿¿¿ ¿¿¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿¿¿
	ADMUX |= (1 << REFS1);
	ADMUX |= (1 << ADLAR); // ¿¿¿¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿¿¿ ¿¿ ¿¿¿¿¿¿ ¿¿¿¿
    // ¿ ¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿ ¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿ ¿ ¿¿¿¿¿¿¿
	ADC_select_cuff();

	ADCSRA |= (1 << ADIE);  // ¿¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿¿¿ ¿¿ ¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿¿¿¿¿¿¿¿
	ADCSRA |= (1 << ADFR);  // ¿¿¿¿¿¿ ¿ ¿¿¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿
	ADCSRA |= (1 << ADPS0); // ¿¿¿¿¿¿¿ ¿¿¿ ¿ 32 ¿¿¿¿ ¿¿¿¿¿¿¿¿¿
	ADCSRA &= ~(1 << ADPS1);  //  ¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿¿ ¿¿
	ADCSRA |= (1 << ADPS2);
	ADCSRA |= (1 << ADEN);  // ¿¿¿¿¿¿¿¿¿ ¿¿¿
}

void ADC_select_cuff() {
	ADMUX |= (1 << MUX1); // ¿¿¿¿¿¿¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿ ¿ ADC1
}

void ADC_select_osc() {
	ADMUX &= ~(1 << MUX1);  // ¿¿¿¿¿¿¿¿¿¿¿¿¿¿¿ ¿¿¿¿¿¿ ¿ ADC0
}
